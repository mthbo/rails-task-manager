<h1><%= @task.title %></h1>
<p><%= @task.done ? 'Done' : 'To do' %></p>
<p><%= @task.description %></p>

<button>
  <%= link_to "Edit",  edit_task_path(@task.id) %>
</button>
<button>
  <%= link_to "Delete",  task_path(@task.id), method: :delete, data: { confirm: "Are you sure?" }%>
</button>
<button>
  <%= link_to "Return to task list",  tasks_path %>
</button>
