<%= form_for(@task) do |f| %>
  <%= f.label :title %>
  <%= f.text_field :title %>

  <%= f.label :description %>
  <%= f.text_field :description %>

  <%= f.label :deadline %>
  <%= f.text_field :deadline, type:"date" %>

  <%= f.check_box :done %>
  <%= f.label :done %>

  <%= f.submit %>
<% end %>
